{{#with data}}
	<dl>
		<dt>Til faktuering</dt>
		<dd>kr {{formatNum amount_real}}</dd>
		<dt>Antall utskriftsjobber</dt>
		<dd>{{num_jobs}}</dd>
		<dt>Antall sider</dt>
		<dd>{{num_pages}} ({{num_pages_real}} faktureres, {{num_pages_alt}} ikke)</dd>
	</dl>
	{{#each printergroups}}
		<div class="printergroup">
			{{#if is_beboer}}
				<h2>Fakturering enkeltbeboere</h2>
			{{else}}
				<h2>Fakturering gruppe: {{printername}}</h2>
			{{/if}}

			{{#if comment}}
				<p>{{comment}}</p>
			{{/if}}

			<table class="table table-striped table-condensed" style="width: auto">
				<thead>
					<tr>
						<th>Navn</th>
						<th>Måned</th>
						<th>Jobber</th>
						<th>Per side</th>
						<th>Sider</th>
						<th>Å betale</th>
					</tr>
				</thead>
				<tfoot>
					<tr style="font-style: italic; font-weight: bold">
						<td colspan="2">Sum</td>
						<td style="text-align: right">{{num_jobs}}</td>
						<td style="text-align: right">&nbsp;</td>
						<td style="text-align: right">{{num_pages}}</td>
						<td style="text-align: right">{{formatNum amount}}</td>
					</tr>
				</tfoot>
				<tbody>
					{{#each users}}
						<tr>
							<td rowspan="{{num_rows}}">
								{{realname}}
								{{#if utflyttet}}
									<b>Utflyttet?</b>
								{{/if}}
							</td>
							
							{{#each months}}
								{{#unless @first}}
									</tr>
									<tr>
								{{/unless}}

								<td>{{name}}</td>
								<td style="text-align: right">{{num_jobs}}</td>
								<td style="text-align: right">{{formatNum cost_each}}</td>
								<td style="text-align: right">{{num_pages}}</td>
								<td style="text-align: right">{{formatNum amount}}</td>
							{{/each}}

							{{#if show_sum}}
								</tr>
								<tr style="font-style: italic">

								<td>Sum</td>
								<td style="text-align: right">{{num_jobs}}</td>
								<td style="text-align: right">&nbsp;</td>
								<td style="text-align: right">{{num_pages}}</td>
								<td style="text-align: right">{{formatNum amount}}</td>
							{{/if}}
						</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
	{{/each}}
{{/with}}