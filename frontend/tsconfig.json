{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "jsx": "react",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "lib": ["dom", "es6", "es2017.object", "dom.iterable", "scripthost", "es2016.array.include"],
    "skipLibCheck": true,
    "baseUrl": "./src",
    "noEmit": true
  },
  "include": ["src/**/*", "vite.config.ts"],
  "exclude": [
    "node_modules"
  ]
}
